<!DOCTYPE HTML>
<html lang="en-US">
<head>
	<meta charset="UTF-8">
	<title>Juicer Demo</title>
	<script type="text/javascript" src="Juicer.js"></script>
</head>
<body>
	<div id="juicer"></div>
	<script type="text/javascript">
		var result={
			list:[
				{'name':'Dier','age':23,'sex':'girl','inner':[
					{num:1},{num:2},{num:3}
				]},
				{'name':'PaulGuo','age':22,'sex':'boy','inner':[
					{num:1},{num:2},{num:3}
				]},
				{'name':'BenBen','age':21,'sex':'unknown','inner':[
					{num:1},{num:2},{num:3},{num:4,innerlist:[
						{innernum:'a'},
						{innernum:'b'},
					]}
				]}
			]
		};

		var tpl=[
			'<ul class="list">',
				'{@for list}',
					'<li>',
						'<span class="name">[#name]</span>&nbsp;',
						'<span class="age">',
							'{@if [#age]>18}',
								'[#age condition="[#age]<22"]',
								'[#sex condition="[#age]>=22"]',
								'{@if [#inner]}',
									'{@for inner}',
										'{@if [#num]==4}',
											'<br/>&nbsp;[#num]',
											'{@for innerlist}',
												'<div>[#innernum]</div>',
											'{@/for}',
										'{@/if}',
										//'{@if true}',
										//	'<br/>&nbsp;[#num]',
										//	'{@for innerlist}',
										//		'<div>[#innernum]</div>',
										//	'{@/for}',
										//'{@/if}',
									'{@/for}',
								'{@/if}',
								'{@if [#inner]}',
									'no inner',
								'{@/if}',
							'{@/if}',
						'</span>',
					'</li>',
				'{@/for}',
			'</ul>'
		].join('');

		document.getElementById('juicer').innerHTML=Juicer(tpl,result);
		console.log(Juicer(tpl,result));
	</script>
</body>
</html>
